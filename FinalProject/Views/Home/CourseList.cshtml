@model dynamic
<body>
    <div>
        <div class="card">
            <div class="card-border">
                <div class="card-border-left"></div>
                <div class="card-border-right"></div>
            </div>
            <div class="card-content">
                <h1>CMS - Course Management System</h1>
                @if(ViewBag.searchKey != null)
                {
                    <p><a style="color: #fd647a; text-decoration: none;" href="/Home/Home">Home</a>  /  <a style="color: #fd647a; text-decoration: none;" href="/Course/Index">Courses</a>  /  <span style="color: #fd647a; text-decoration: none;" href="/Course/Search">Search</span>  /  @ViewBag.searchKey</p>
                    <div style="display: flex; justify-content: end; padding: 10px;">
                        <form style="display: flex; flex-direction: column; justify-content: start; align-items: center;" action="/Home/SearchCourse" method="post">
                            <label style="font-size: 15px;">Search courses:</label>
                            <input type="text" name="key" size="12" style="height: 2.75rem; border: .5px solid rgba(0,0,0,.5)" value="@ViewBag.searchKey" />
                            <input type="submit" value="GO" style="width: 50px; height: 2.75rem; background-color: black; color: white; font-weight: bold;
                             cursor: pointer; margin-top: 10px;" />
                        </form>
                    </div>
                }
                else
                {
                    <p><a style="color: #fd647a; text-decoration: none;" href="/Home/Home">Home</a>  /  <a style="color: #fd647a; text-decoration: none;" href="/Course/Index">Courses</a>  /  <span style="color: #fd647a; text-decoration: none;" href="/Course/Search">Search</p>
                }
            </div>
        </div>

        <div style="width: 90%; margin-left: 5%; margin-top: 30px; background-color: white">
            @foreach (var item in Model)
            {
                <div style="border: 1px solid black; margin: 10px; display: flex; flex-direction: column;">
                    <div>@item.Name</div>
                    <div style="width: 80px; height: 40px;">Enroll</div>
                </div>
            }
        </div>
    </div>
</body>
<style>
    body{
        background-color: #f7f7f7;
    }

    .card {
        width: 90%;
        height: fit-content;
        margin-left: 5%;
        background-color: white;
        margin-top: 50px;
    }

    .card-border {
        width: 100%;
        height: 4px;
        display: flex;
    }

    .card-border-left {
        width: 50%;
        background-color: #fd637a;
    }

    .card-border-right {
        width: 50%;
        background-color: black;
    }
    .card-content{
        padding: 10px;
    }
</style>