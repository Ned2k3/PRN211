@model Course

<body>
    <div class="card">
        <div class="card-border">
            <div class="card-border-left"></div>
            <div class="card-border-right"></div>
        </div>
        <div class="card-content">
            <h1>My Course</h1>
            <p style="margin-bottom: 0;">
                <a class="navigation-link" href="/Home/Home">Home</a>  /  <span>My Course</span>  /
            </p>
        </div>
    </div>

    <div style="margin: 0 15px 0 15px; padding: 20px 30px 180px 30px; background-color: white;">
        <div class="container-fluid">
            <div class="row justify-content-center">
                <form style="display: flex; flex-direction: column;">
                    <label>Course Name:</label>
                    <input type="text" asp-for="CourseName" size="20" name="cname"/>
                    <label>Category:</label>
                    <select></select>
                    <label>Start Date:</label>
                    <input type="date" size="20" asp-for="StartDate" />
                    <label>End Date:</label>
                    <input type="date" size="20" asp-for="EndDate" />
                </form>
            </div>
        </div>
    </div>
</body>
<style>
    body {
        background-color: #f7f7f7;
    }

    .card {
        height: fit-content;
        margin-left: 5%;
        background-color: white;
        margin: 50px 15px 20px 15px;
        position: initial;
    }

    .card-border {
        width: 100%;
        height: 4px;
        display: flex;
    }

    .card-border-left {
        width: 50%;
        background-color: #fd637a;
    }

    .card-border-right {
        width: 50%;
        background-color: black;
    }

    .card-content {
        padding: 10px 15px;
        margin-bottom: 20px;
    }

    table {
        width: 60%;
    }

    th {
        background-color: dodgerblue;
    }

    td {
        border-top: 1px solid rgba(0,0,0,0.2);
    }

    th, td {
        padding: 10px;
        text-align: center;
    }

    .approve-btn {
        text-decoration: none;
        color: #fd637a;
        border: 1px solid rgba(0,0,0,0.5);
        border-radius: 5px;
        padding: 5px;
    }

        .approve-btn:hover {
            background-color: #fd637a;
            color: white;
        }
</style>